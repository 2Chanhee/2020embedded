# This code is test code

import cv2
import numpy as np

cap = cv2.VideoCapture(0)
ret, frame = cap.read()

if ret == False :
    print('Camera is not open!')
    exit()

#cap.set(3, 1280)
#cap.set(4, 960)

print(frame)
while(True):
    ret, frame = cap.read()
    
    cv2.imshow("Debug", frame)
    a = cv2.waitKey(1)
    if a == ord('q'):
        break

    elif a == ord('w'):
        cv2.imwrite('./test.png', frame)
        print('done')

    elif a == ord('x'):
        # a = LineTracing(frame)
        print(a)


cv2.destroyAllWIndow()
